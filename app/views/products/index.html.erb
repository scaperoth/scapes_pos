<h1>Listing products</h1>

<div class="col s12 m4">
<%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
    Search term:
    <%= text_field_tag :search, params[:search] %>
  <% end %>
<% end %>
</div>

<table class="responsive no-wrap">
    <thead>
        <tr>
            <th>SKU</th>
            <th>DESC</th>
            <th>PRICE</th>
            <th>CATEGORY</th>
            <th></th>
        </tr>
    </thead>  
    <tbody>
        <% @products.each do |product| %>

        <tr>
            <td><%= product.sku %></td>
            <td><%= product.description %></td>
            <td><%= number_to_currency product.price %></td>
            <td><%= product.category.present? ? product.category.name : 'N/A' %></td>
            <td><%= render partial: 'elements/form_buttons', locals: {model: product} %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= will_paginate @products %>
<br>

<%= link_to 'New Product', new_team_product_path %>