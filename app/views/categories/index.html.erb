<h1>Listing categories</h1>

<table>
    <thead>
        <tr>
            <th>NAME</th>
            <th>SEARCH TERM</th>
            <th>PRICE</th>
        </tr>
    </thead>

    <tbody>
        <% @categories.each do |category| %>
        <tr>
            <td>
                <%= category.name %>
            </td>
            <td>
                <%= category.search_term %>
            </td>
            <td>
                <%= number_to_currency category.price %>
            </td>
            <td> <%= render partial: 'elements/form_buttons', locals: {model: category} %>
              </td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Category', new_team_category_path %>