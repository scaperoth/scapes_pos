<h2 class="margin-remove-bottom grey-text lighten-2"><small>Team</small></h2>
<h1 class="margin-remove-top"><%= @team.name %></h1>

<div class="section"></div>
<div class="section">
    <div class="row">
        <div class="col sm12 m4">
            <%= link_to edit_team_path, class:"waves-effect waves-light blue lighten-2
            btn left" do %>
            <i class="material-icons left">edit</i>Edit Team Name
            <% end %>
        </div>
        <div class="col sm12 m4 center-align">
          <%= link_to team_team_invites_path, class:"waves-effect waves-light green btn"  do %>
          <i class="material-icons left">person_add</i>Invite Members
          <% end %>
        </div>
        <div class="col sm12 m4">
            <%= link_to team_team_member_path(current_team_member), method: :delete, data: { confirm: 'Are you sure you want to leave this team? You will be assigned a new random team name. This cannot be undone' }, class:"waves-effect waves-light red lighten-2
            btn right" do %>
            <i class="material-icons left">open_in_new</i>Leave Team
            <% end %>
        </div>
    </div>
</div>
<div class="divider"></div>
<div class="section">
    <div class="row">
      <%= render template: 'team_members/index' %>
    </div>  
</div>


<div class="section">
    <div class="row">
      <%= render template: 'team_invites/index' %>
    </div>  
</div>

<div class="section">
    <div class="row">
        <%= link_to 'Back', dashboard_path %>
    </div>
</div>